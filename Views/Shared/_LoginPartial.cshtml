@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager


@if (SignInManager.IsSignedIn(User))
{
    <ul id="navigation" class="main-header main-menu">
        <li>
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index">Xin chào @User.Identity?.Name!</a>
        </li>
        <li>
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark" style="height:80%">Đăng xuất</button>
            </form>
        </li>
    </ul>
}
else
{
    <ul id="navigation" class="main-header main-menu">
        <li><a asp-area="Identity" asp-page="/Account/Register" class="pl-4">Đăng ký</a></li>
        <li><a asp-area="Identity" asp-page="/Account/Login" class="pl-4">Đăng nhập</a></li>
    </ul>
}

