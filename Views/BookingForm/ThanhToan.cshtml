@model WebCK.Models.DepositBill

<body>
    <h2>Your Bill</h2>
    <div class="container">
        <div class="form-group">
            <label>FullName: </label>
            <input class="form-control" readonly value="@ViewBag.Form.FullName" />
        </div>
        <div class="form-group">
            <label>Age: </label>
            <input class="form-control" readonly value="@ViewBag.Form.Age" />
        </div>
        <div class="form-group">
            <label>PhoneNumber: </label>
            <input class="form-control" readonly value="@ViewBag.Form.PhoneNumber" />
        </div>
        <div class="form-group">
            <label>Selected Room: </label>
            <input class="form-control" readonly value="@ViewBag.Form.Room.RoomName" />
        </div>
        <div class="form-group">
            <label asp-for="TotalFee">Deposit Fee: </label>
            <input asp-for="TotalFee" class="form-control" value="@ViewBag.Form.Deposit" required />
            <span asp-validation-for="TotalFee" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Confirm</button>
    </div>
</body>